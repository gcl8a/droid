#include "ros/ros.h"
#include <droid/MotorData.h>

void motorDataCallback(const droid::MotorData& data)
{
  ROS_INFO("I heard: [%1.3f %1.3f]", data.left, data.right);
}

int main(int argc, char **argv)
{
  ros::init(argc, argv, "base_odom");

  ros::NodeHandle n;

  ros::Subscriber sub = n.subscribe("odom", 1000, motorDataCallback);

  ros::spin();

  return 0;
}
